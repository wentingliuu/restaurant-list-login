<h1 class="mb-1 restaurant-show-title">編輯餐廳</h1>
<div class="container mt-0 d-flex justify-content-center">
  <form class="m-5" action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
    <div class="form-row justify-content-between" style="width: 55vw;">
      <div class="col-5">
        <label for="name">餐廳名稱</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="請輸入欲修改的中文名稱" value="{{restaurant.name}}" required />
      </div>
      <div class="col-5">
        <label for="nameEn">英文名稱</label>
        <input type="text" class="form-control" id="nameEn" name="nameEn" placeholder="請輸入欲修改的英文名稱" value="{{restaurant.nameEn}}" required />          
      </div>
    </div>
    <div class="form-row justify-content-between mt-4" style="width: 55vw;">
      <div class="col-5">
        <label for="phone">餐廳電話</label>
        <input type="tel" class="form-control" id="phone" name="phone" placeholder="請輸入欲修改的餐廳電話"
          value="{{restaurant.phone}}" required />
      </div>
      <div class="col-5">
        <label for="location">餐廳地址</label>
        <input type="text" class="form-control" id="location" name="location" placeholder="請輸入欲修改的餐廳地址"
          value="{{restaurant.location}}" required />
      </div>
    </div>
    <div class="form-row justify-content-between mt-4" style="width: 55vw;">
      <div class="col-7">
        <label for="category">餐廳類別</label>
        <select id="category" name="category" class="form-control col-5">
          <option value="{{ restaurant.category }}" selected disabled>({{ restaurant.category }})</option>
          <option value="中東料理">中東料理</option>
          <option value="日本料理">日本料理</option>
          <option value="義式餐廳">義式餐廳</option>
          <option value="美式">美式</option>
          <option value="酒吧">酒吧</option>
          <option value="咖啡">咖啡</option>
        </select>
      </div>
      <div class="col-5">
        <label for="rating">餐廳評分</label>
        <input type="range" class="form-control-range" id="rating" name="rating" min="0" max="5" step="0.1" value="{{restaurant.rating}}" oninput="this.nextElementSibling.value = this.value" required />
        <output class="text-info mt-1" style="font-size: 1rem; font-weight:bold;">{{restaurant.rating}}</output> <i class="fas fa-star text-info" style="font-size: 1rem; font-weight:bold;"></i>
      </div>
    </div>
    <div class="form-row justify-content-between mt-4" style="width: 55vw;">
      <div class="col-5">
        <label for="image">餐廳圖片</label>
        <input type="url" class="form-control" id="image" name="image" placeholder="請輸入欲修改的圖片超連結"
          value="{{restaurant.image}}" required />
      </div>
      <div class="col-5">
        <label for="googleMap">Google Map</label>
        <input type="url" class="form-control" id="googleMap" name="googleMap" placeholder="請輸入欲修改的 Google Map 超連結" value="{{restaurant.googleMap}}" required />
      </div>
    </div>
    <div class="form-row justify-content-between mt-4" style="width: 55vw;">
      <label for="description">餐廳敘述</label>
      <textarea class="form-control" rows="4" name="description" id="description" type="text" placeholder="請輸入欲修改的餐廳敘述（30-300 字）" minlength="30" maxlength="300" value="{{ restaurant.description }}" required>{{ restaurant.description }}</textarea>
    </div>
    <div class="mt-4">
      <button class="btn btn-danger btn-sm" type="submit">Save</button>
    </div>
  </form>
</div>